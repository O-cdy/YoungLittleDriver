#:import * mandel_layouts
<ShoppingScreen>:
    Column:
        MDTopAppBar:
            id: toolbar
            left_action_items: [['chevron-left', lambda x: app.go_back()]]

        ScrollView:
            Column:
                id: container
                spacing: dp(10)
                adaptive_height: True

<ShoppingItem>:
    ### Do not need to add attributes for the title and the content
    ###     because a SwipeItem has both of them already.
    post_date: ''
    post_time: ''
    pictureURL: ''

    on_press: self.show_details()

    Lead:
        AsyncImage:
            source: root.pictureURL
    Tail:
        padding: dp(10)
        MDLabel:
            text: root.post_date
            shorten: True
            shorten_from: 'right'
        MDLabel:
            text: root.post_time
            shorten: True
            shorten_from: 'right'
